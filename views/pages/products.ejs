<script>
$(document).ready(function() {

    let mainprice = 3;
    $("#customforminput").hide();
    $("#plusclick").show();
    $("#plusclick").on("click", function() {
        $("#customforminput").show();
        $("#plusclick").hide();
    });

    $(".setprice").on("click", function() {
        $(".setprice").removeClass("border-dark");
        $(this).addClass("border-dark");
        let pricein = $(this).attr("data-number");
        $("#customforminput").hide();
        $("#plusclick").show(); 
       let totalprice = pricein * mainprice;
       $("#setcurrentprice").html("$"+totalprice);
    });

    $("#customin").on("change keyup blur", function() {

        let keyvalue = $("#customin").val();

        if(keyvalue > 1000){
            $("#thirdproduct").addClass("d-none");
        }else{
            let newtotal = keyvalue * mainprice;
            $(".setprice").removeClass("border-dark");
            $("#setcurrentprice").html("$"+newtotal);
            $("#thirdproduct").removeClass("d-none");
        }

        

    });

});
</script>
